{
  "name": "agent-coordinator-monorepo",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/contracts",
    "packages/engine",
    "packages/coordinator",
    "packages/specs/*",
    "packages/agents/*",
    "packages/storage",
    "packages/cli",
    "packages/temporal-coordinator",
    "packages/package-queue-orchestrator",
    "packages/braingrid-cli-wrapper",
    "packages/dev-workflow",
    "packages/workflow-builder",
    "packages/workflow-worker-service"
  ],
  "scripts": {
    "build": "tsc -b",
    "build:watch": "tsc -b --watch",
    "clean": "yarn workspaces run clean && rm -rf node_modules",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:e2e": "vitest run --config tests/e2e/vitest.config.ts tests/e2e",
    "test:e2e:watch": "vitest --config tests/e2e/vitest.config.ts tests/e2e",
    "lint": "eslint packages --ext .ts",
    "typecheck": "tsc -b --noEmit",
    "build:package": "tsx production/scripts/build-package.ts",
    "demo:package-builder": "tsx production/scripts/build-content-suite.ts",
    "infra:up": "docker compose -f docker/docker-compose.yml up -d",
    "infra:down": "docker compose -f docker/docker-compose.yml down",
    "infra:logs": "docker compose -f docker/docker-compose.yml logs -f"
  },
  "devDependencies": {
    "@temporalio/activity": "^1.13.1",
    "@temporalio/client": "^1.13.1",
    "@temporalio/worker": "^1.13.1",
    "@temporalio/workflow": "^1.13.1",
    "@types/node": "^22.7.5",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vitest/ui": "^1.6.0",
    "dotenv": "^17.2.3",
    "esbuild": "^0.27.0",
    "eslint": "^8.57.0",
    "tsx": "^4.20.6",
    "typescript": "^5.6.3",
    "vitest": "^1.6.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "yarn": ">=1.22.0"
  },
  "dependencies": {
    "@swc/helpers": "^0.5.17",
    "@temporalio/testing": "^1.13.2"
  }
}
