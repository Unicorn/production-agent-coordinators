{
  "name": "@coordinator/workflow-builder",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev -p 3010",
    "build": "next build",
    "start": "next start -p 3010",
    "lint": "next lint",
    "typecheck": "tsc --noEmit",
    "gen:types": "supabase gen types typescript --project-id $SUPABASE_PROJECT_ID > src/types/database.ts",
    "sync:components": "tsx src/scripts/sync-components.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:integration:compiler": "vitest run tests/integration/compiler-execution",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "test:e2e:auth": "tsx scripts/generate-test-auth.ts",
    "test:e2e:refresh": "tsx scripts/generate-test-auth.ts && playwright test",
    "test:a11y": "playwright test tests/e2e/accessibility/",
    "test:a11y:ui": "playwright test tests/e2e/accessibility/ --ui",
    "test:a11y:report": "playwright test tests/e2e/accessibility/ --reporter=html",
    "test:perf": "tests/performance/run-all-tests.sh",
    "test:perf:creation": "k6 run tests/performance/workflow-creation.k6.js",
    "test:perf:execution": "k6 run tests/performance/workflow-execution.k6.js",
    "test:perf:compiler": "k6 run tests/performance/compiler-stress.k6.js",
    "test:perf:cleanup": "tests/performance/cleanup.sh"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.27.0",
    "@bernierllc/generic-workflow-ui": "1.0.2",
    "@bernierllc/temporal-workflow-ui": "1.1.0",
    "@supabase/auth-helpers-nextjs": "^0.8.7",
    "@supabase/ssr": "^0.0.10",
    "@supabase/supabase-js": "^2.38.4",
    "@tamagui/config": "^1.94.4",
    "@tamagui/core": "^1.94.4",
    "@tamagui/dialog": "^1.94.4",
    "@tamagui/portal": "^1.94.4",
    "@tamagui/progress": "^1.94.4",
    "@tamagui/sheet": "^1.94.4",
    "@tanstack/react-query": "^4.36.1",
    "@temporalio/activity": "^1.13.2",
    "@temporalio/client": "^1.13.2",
    "@temporalio/common": "^1.13.2",
    "@temporalio/worker": "^1.13.2",
    "@temporalio/workflow": "^1.13.2",
    "@trpc/client": "^10.45.0",
    "@trpc/react-query": "^10.45.0",
    "@trpc/server": "^10.45.0",
    "@types/pg": "^8.15.6",
    "clsx": "^2.1.1",
    "date-fns": "^3.6.0",
    "dotenv": "^16.3.1",
    "lucide-react": "^0.553.0",
    "next": "^14.2.13",
    "pg": "^8.16.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-flow-renderer": "^10.3.17",
    "react-native-svg": "^15.15.0",
    "react-native-svg-web": "^1.0.9",
    "react-native-web": "^0.21.2",
    "redis": "^5.9.0",
    "superjson": "^2.2.1",
    "tamagui": "^1.94.4",
    "yaml": "^2.3.4",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@playwright/test": "^1.40.0",
    "@types/node": "^22.7.5",
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.1",
    "autoprefixer": "^10.4.20",
    "axe-core": "^4.11.0",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.13",
    "ignore-loader": "^0.1.2",
    "postcss": "^8.4.47",
    "supabase": "^1.123.4",
    "tailwindcss": "^3.4.13",
    "tsx": "^4.20.6",
    "typescript": "^5.6.3",
    "vitest": "^1.6.0"
  },
  "peerDependencies": {
    "@bernierllc/workflow-ui": "*"
  },
  "peerDependenciesMeta": {
    "@bernierllc/workflow-ui": {
      "optional": true
    }
  }
}
